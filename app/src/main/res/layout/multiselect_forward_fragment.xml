<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="contactListAdapter" type="com.lgt.cwm.activity.home.fragments.contact.adapter.ContactListAdapter" />

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contact_selection_list"
            android:layout_width="match_parent"
            tools:listitem="@layout/contact_list_item"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:paddingBottom="44dp" />


        <include
            android:id="@+id/bottom_bar_layout"
            layout="@layout/multiselect_forward_fragment_bottom_bar_and_spacer" />



    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>