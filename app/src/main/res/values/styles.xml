<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ContactSelectionChip" parent="Widget.MaterialComponents.Chip.Choice">
        <!--        <item name="chipBackgroundColor">@color/color_choice_chip_background_color</item>-->
        <!--        <item name="chipStrokeColor">@color/color_choice_chip_strokecolor_selector</item>-->
        <!--        <item name="chipStrokeWidth">1dp</item>-->
        <!--        <item name="android:textColor">@color/color_choice_chip_text_color</item>-->
        <item name="android:textSize">20sp</item>

    </style>


    <!--    Button-->
    <style name="Cwm.Widget.Button.Base.Primary" parent="Widget.Material3.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Cwm.Widget.Button.Large.Primary" parent="@style/Cwm.Widget.Button.Base.Primary">
        <item name="android:minHeight">44dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Cwm.Button.Primary</item>
    </style>

    <style name="ThemeOverlay.Cwm.Button.Primary" parent="ThemeOverlay.Material3.Button">
        <item name="colorOnContainer">#FFFFFF</item>
        <item name="colorContainer">#2C58C3</item>
    </style>

    <style name="Cwm.Widget.Button.Base.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Cwm.Button.Tonal</item>
    </style>

    <style name="Cwm.Widget.Button.Large.Tonal" parent="Cwm.Widget.Button.Base.Tonal">
        <item name="android:minHeight">44dp</item>
    </style>

    <style name="ThemeOverlay.Cwm.Button.Tonal" parent="ThemeOverlay.Material3.Button">
        <item name="colorOnContainer">#051845</item>
        <item name="colorContainer">#D2DFFB</item>
    </style>

    <style name="Cwm.Widget.Button.Base.Secondary" parent="Widget.Material3.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/cwm_button_secondary_text_selector</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconTint">@color/cwm_button_secondary_text_selector</item>
        <item name="rippleColor">#f6f6f6</item>
    </style>

    <style name="Cwm.Widget.Button.Large.Secondary" parent="@style/Cwm.Widget.Button.Base.Secondary">
        <item name="android:minHeight">44sp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="TextSecure.ActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/secondaryColor</item>
        <!--        <item name="titleTextStyle">@style/ActionModeTitleTextStyle</item>-->
    </style>

    <style name="ActionModeTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@color/primaryColor</item>
    </style>

    <style name="Cwm.Widget.ImageView.ActionButton" parent="ThemeOverlay.Material3">
        <item name="tint">#151D2C</item>
        <item name="android:background">@drawable/selectable_icon_button</item>
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="MediaPreview.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:tint">#ffffff</item>
    </style>

    <style name="Cwm.Text.Body" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">0.01</item>
    </style>

</resources>